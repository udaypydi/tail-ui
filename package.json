{
  "name": "tail-ui",
  "version": "1.0.0",
  "description": "A UI library for React built on Tailwind Css ",
  "main": "lib/index.js",
  "scripts": {
    "build": "npm run build:css && webpack ---config ./config/webpack.prod.config.js",
    "dev": "npm run watch:css && webpack-dev-server --config ./config/webpack.dev.config.js",
    "lint": "./node_modules/.bin/eslint --ext .js,.jsx src/",
    "lint:fix": "./node_modules/.bin/eslint --ext .js,.jsx src/ --fix",
    "build:css": "postcss src/assets/css/styles.css -o src/assets/css/main.css",
    "watch:css": "postcss src/assets/css/styles.css -o src/assets/css/main.css",
    "test": "jest --collect-coverage",
    "test:update": "jest --collect-coverage --updateSnapshot",
    "start:docs": "npx styleguidist server",
    "build:docs": "npx styleguidist build",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "react",
    "boilerplate",
    "webpack",
    "webpack hmr",
    "travis",
    "react-simple-boilerplate",
    "react-boilerplate",
    "tailwindcss",
    "react ui component"
  ],
  "files": ["lib", "package.json", "LICENSE", "README.md"],
  "author": "Uday Bhaskhar",
  "license": "MIT",
  "dependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-react": "^7.9.4",
    "autoprefixer": "^9.7.6",
    "babel-loader": "^8.1.0",
    "classnames": "^2.2.6",
    "postcss-cli": "^7.1.0",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.1.2",
    "tailwindcss": "^1.3.4",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.5.0",
    "@testing-library/react": "^10.0.2",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.5.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.1",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.0.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^25.3.0",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.13.1",
    "postcss-loader": "^3.0.0",
    "react-styleguidist": "^11.0.5",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.1.3",
    "webpack-bundle-analyzer": "^3.6.1",
    "webpack-dev-server": "^3.10.3"
  }
}
